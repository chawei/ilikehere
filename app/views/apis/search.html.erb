<% title "Search", false %>

<div id="search_page">
  <%- if @results.blank? -%>

  <p>Not matched results</p>

  <%- else -%>

  <%- for result in @results -%>
    <div class='result'>
      <h3><%= result["title"] %></h3>
      <div class='address'><%= result['address'] %></div>
      <div class='phone'><%= result['telephone'] %></div>
      <div class='actions'>
        <%= link_to 'add to my placemarks', add_result_placemarks_path(result), :method => :post %>
      </div>
    </div>
  <%- end -%>

  <%- end -%>
</div>
